#!/bin/bash

function get_from_git() {
   pkg="$1"
   echo downloading ${pkg}
   wget "https://github.com/Sable/$1/tarball/master"
   tar xzf master
   rm master
   mv Sable-${pkg}* ${pkg}
}

svn export --trust-server-cert --non-interactive http://clara.googlecode.com/svn/trunk-with-deps
mv trunk-with-deps/* .
rm -fr trunk-with-deps

get_from_git soot
get_from_git jasmin